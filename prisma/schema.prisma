generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String
  password String
  skill    Skill[]
  Project  Project[]
  token    String
}

model Skill {
  id        String  @id @default(uuid())
  name      String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  project   Project @relation(fields: [projectId], references: [id])
  projectId String
}

model Project {
  id          String     @id @default(uuid())
  name        String
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  skill       Skill[]
  techStack   TechStack? @relation(fields: [techStackId], references: [id])
  techStackId String?
  thumbnail   String[]
  tags        Tags       @relation(fields: [tagId], references: [id])
  tagId       String
  description String
}

model Message {
  id      String @id @default(uuid())
  name    String
  email   String
  number  String @default("")
  message String
}

model TechStack {
  id   String @id @default(uuid())
  name String

  projectId Project[]
}

model Tags {
  id        String    @id @default(uuid())
  projectId String
  tag       Project[]

  name String
}

model Otp {
  id         String   @id @default(uuid())
  otp        String @unique
  expiryDate String?
}
